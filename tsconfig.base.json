{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@architecture-oracle/api/*": ["apps/api/src/*"],
      "@architecture-oracle/web/*": ["apps/web/*"],
      "@architecture-oracle/mobile/*": ["apps/mobile/*"]
    }
  }
}
